# POKEMON_ALIASES

alias pokemon_aliases='${EDITOR} ~/.custom/.pokemon_aliases'
alias vscpokemon_aliases='code ~/.custom/.pokemon_aliases'

alias pokemon='cd ~/repos/pokemon/'
# alias vscpokemon='code -n ~/repos/pokemon/'

alias pokeemerald='cd ~/repos/pokemon/pokeemerald/'
alias vscpokeemerald='code -n ~/repos/pokemon/pokeemerald/'

alias docs-gt='cd ~/repos/pokemon/docs-gt/'
alias vscdocs-gt='code -n ~/repos/pokemon/docs-gt/'

# ---

# short forms

alias gldb='glogdb'
alias gle='gloge'
alias glgt='gloggt'
alias gsdb='gswdb'
alias gse='gswe'
alias gsgt='gswgt'

# ---

alias OA='echo haha it happened again oooh aaah hahaha'

# opens main notes file
alias pokenotes='nano ~/repos/pokemon/notes/notes.md'
alias vscpokenotes='code ~/repos/pokemon/notes/notes.md'

# manages the save file
alias tossit='toss pokeemerald.sav'
alias takeit='move pokeemerald.sav ~/repos/pokemon/last-save/'
alias giveit='move ../last-save/pokeemerald.sav ~/repos/pokemon/pokeemerald/'
alias hasit='f pokeemerald.sav'
alias copyit='copy pokeemerald.sav ~/repos/pokemon/last-save/'

# 'make' is overridden for speed reasons; the command to find the j# is 'nproc'
alias make='make -j'
alias maake='make -j$(nproc)'
alias makke='make clean && make -j'
alias maakke='make clean && make -j$(nproc)'

# faster logging and switching for common branches
alias glogdb='glog debug'
alias gloge='glog expansion'
# alias gloggt='glog gt'
alias gswdb='gsw debug'
alias gswe='gsw expansion'
# alias gswgt='gsw gt'

function gloggt() {
  if [ $1 ]; then
    glog gt-"$1"
  else
    glog gt
  fi
}

# alias of function is used because I couldn't get it to work without doing so :O
alias gswgt='function _gswgt() { if [ $1 ]; then gsw gt-"$1"; else gsw gt; fi }; _gswgt'

