# POKEMON_ALIASES

# opens the stuff
alias vscpokeemerald='code -n ~/builds/pokemon/pokeemerald'
alias pokeemerald_aliases='${EDITOR} ~/.custom/.pokeemerald_aliases'
alias vscpokeemerald_aliases='code ~/.custom/.pokeemerald_aliases'

# gets you to the stuff
alias pokemon='cd ~/builds/pokemon/'
alias pokeemerald='cd ~/builds/pokemon/pokeemerald'

# ---

alias p-berries='code ~/builds/pokemon/berries.md'
alias p-habitats='code ~/builds/pokemon/habitats.md'
