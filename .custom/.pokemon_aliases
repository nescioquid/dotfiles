# POKEMON_ALIASES

# opens the stuff
alias vscpokemon='code -n ~/builds/pokemon/'
alias vscpokeemerald='code -n ~/builds/pokemon/pokeemerald/'
alias pokemon_aliases='${EDITOR} ~/.custom/.pokemon_aliases'
alias vscpokemon_aliases='code ~/.custom/.pokemon_aliases'

# gets you to the stuff
alias pokemon='cd ~/builds/pokemon/'
alias pokeemerald='cd ~/builds/pokemon/pokeemerald/'

