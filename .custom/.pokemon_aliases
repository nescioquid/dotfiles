alias tossit='toss pokeemerald.sav'
alias takeit='move pokeemerald.sav ~/builds/pokemon/last-save/'
alias giveit='move ~/builds/pokemon/last-save/pokeemerald.sav ~/builds/pokemon/pokeemerald/'
alias findit='f pokeemerald.sav'
alias copyit='copy pokeemerald.sav ~/builds/pokemon/last-save/'

# the command to find the j# is 'nproc'
alias make='make -j'
alias maake='make -j$(nproc)'
alias makke='make clean && make -j'
alias maakke='make clean && make -j$(nproc)'

