# ASCII_ALIASES

alias ascii_aliases='${EDITOR} ~/.custom/.ascii_aliases'
alias vscascii_aliases='code ~/.custom/.ascii_aliases'

# ---

alias ydtt='_ascii_youdidthething'
alias noworry='_ascii_dontworryaboutit'
alias plsstopthx='_ascii_pleasestop && echo "" && _ascii_thanks'
alias plshelp='_ascii_please && echo "" && _ascii_sendhelp'
alias nolooky='_ascii_pleasestop && echo "" && _ascii_lookingovermyshoulderatmyscreen && echo "" && _ascii_thanks'
alias noasky='_ascii_pleasestop && echo "" && _ascii_askingsomanyquestions && echo "" && _ascii_thanks'

# ---

# https://texteditor.com/multiline-text-art/ (font: "Blocks in two lines")

function _ascii_youdidthething() {
  echo '▀▄▀ ▄▀▄ █ █   █▀▄ █ █▀▄   ▀█▀ █▄█ ██▀   ▀█▀ █▄█ █ █▄ █ ▄▀  █'
  echo ' █  ▀▄▀ ▀▄█   █▄▀ █ █▄▀    █  █ █ █▄▄    █  █ █ █ █ ▀█ ▀▄█ ▄'
}

function _ascii_dontworryaboutit() {
  echo '█▀▄ ▄▀▄ █▄ █ ▀ ▀█▀   █   █ ▄▀▄ █▀▄ █▀▄ ▀▄▀   ▄▀▄ ██▄ ▄▀▄ █ █ ▀█▀   █ ▀█▀'
  echo '█▄▀ ▀▄▀ █ ▀█    █    ▀▄▀▄▀ ▀▄▀ █▀▄ █▀▄  █    █▀█ █▄█ ▀▄▀ ▀▄█  █    █  █ '
}

function _ascii_plsstop() {
  echo '█▀▄ █   ▄▀▀   ▄▀▀ ▀█▀ ▄▀▄ █▀▄'
  echo '█▀  █▄▄ ▄██   ▄██  █  ▀▄▀ █▀ '
}

function _ascii_pleasestop() {
  echo '█▀▄ █   ██▀ ▄▀▄ ▄▀▀ ██▀   ▄▀▀ ▀█▀ ▄▀▄ █▀▄'
  echo '█▀  █▄▄ █▄▄ █▀█ ▄██ █▄▄   ▄██  █  ▀▄▀ █▀ '
}

function _ascii_pls() {
  echo '█▀▄ █   ▄▀▀'
  echo '█▀  █▄▄ ▄██'
}

function _ascii_please() {
  echo '█▀▄ █   ██▀ ▄▀▄ ▄▀▀ ██▀'
  echo '█▀  █▄▄ █▄▄ █▀█ ▄██ █▄▄'
}

function _ascii_lookingovermyshoulderatmyscreen() {
  echo '█   ▄▀▄ ▄▀▄ █▄▀ █ █▄ █ ▄▀    ▄▀▄ █ █ ██▀ █▀▄   █▄ ▄█ ▀▄▀   ▄▀▀ █▄█ ▄▀▄ █ █ █   █▀▄ ██▀ █▀▄'
  echo '█▄▄ ▀▄▀ ▀▄▀ █ █ █ █ ▀█ ▀▄█   ▀▄▀ ▀▄▀ █▄▄ █▀▄   █ ▀ █  █    ▄██ █ █ ▀▄▀ ▀▄█ █▄▄ █▄▀ █▄▄ █▀▄'
  echo ''
  echo '▄▀▄ ▀█▀   █▄ ▄█ ▀▄▀   ▄▀▀ ▄▀▀ █▀▄ ██▀ ██▀ █▄ █'
  echo '█▀█  █    █ ▀ █  █    ▄██ ▀▄▄ █▀▄ █▄▄ █▄▄ █ ▀█'
}

function _ascii_thx() {
  echo '▀█▀ █▄█ ▀▄▀'
  echo ' █  █ █ █ █'
}

function _ascii_thanks() {
  echo '▀█▀ █▄█ ▄▀▄ █▄ █ █▄▀ ▄▀▀'
  echo ' █  █ █ █▀█ █ ▀█ █ █ ▄██'
}

function _ascii_yes() {
  echo '▀▄▀ ██▀ ▄▀▀'
  echo ' █  █▄▄ ▄██'
}

function _ascii_no() {
  echo '█▄ █ ▄▀▄'
  echo '█ ▀█ ▀▄▀'
}

function _ascii_maybe() {
  echo '█▄ ▄█ ▄▀▄ ▀▄▀ ██▄ ██▀'
  echo '█ ▀ █ █▀█  █  █▄█ █▄▄'
}

function _ascii_askingsomanyquestions() {
  echo '▄▀▄ ▄▀▀ █▄▀ █ █▄ █ ▄▀    ▄▀▀ ▄▀▄   █▄ ▄█ ▄▀▄ █▄ █ ▀▄▀   ▄▀▄ █ █ ██▀ ▄▀▀ ▀█▀ █ ▄▀▄ █▄ █ ▄▀▀'
  echo '█▀█ ▄██ █ █ █ █ ▀█ ▀▄█   ▄██ ▀▄▀   █ ▀ █ █▀█ █ ▀█  █    ▀▄█ ▀▄█ █▄▄ ▄██  █  █ ▀▄▀ █ ▀█ ▄██'
}

function _ascii_nescioquid(){
  echo '█▄ █ ██▀ ▄▀▀ ▄▀▀ █ ▄▀▄ ▄▀▄ █ █ █ █▀▄'
  echo '█ ▀█ █▄▄ ▄██ ▀▄▄ █ ▀▄▀ ▀▄█ ▀▄█ █ █▄▀'
}

function _ascii_sendhelp(){
  echo '▄▀▀ ██▀ █▄ █ █▀▄   █▄█ ██▀ █   █▀▄'
  echo '▄██ █▄▄ █ ▀█ █▄▀   █ █ █▄▄ █▄▄ █▀ '
}
