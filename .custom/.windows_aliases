# WINDOWS_ALIASES

# opens the stuff
alias windows_aliases='${EDITOR} ~/.custom/.windows_aliases'
alias vscwindows_aliases='code ~/.custom/.windows_aliases'

# ---

alias windows='cd /mnt/c/Users'
alias desktop='_desktop() { cd /mnt/c/Users/"$1"/Desktop/ ; }; _desktop'
alias documents='_documents() { cd /mnt/c/Users/"$1"/Documents/ ; }; _documents'
alias downloads='_downloads() { cd /mnt/c/Users/"$1"/Downloads/ ; }; _downloads'

alias toss='tossout'
alias trash='totrash'
alias tossed='totossed'
alias lt='ltossed'

# moves tossed folder to the windows desktop
alias tosstodesktop='_tosstodesktop() {
  mv -ivt /mnt/c/Users/"$1"/Desktop/ ~/.local/share/Trash/files/tossed/ &&
  echo hey, you just moved the "tossed" directory to the windows desktop using the \*mv\* command. nice! ;
  }; _tosstodesktop'

# toss things into the trash instead of hard deleting
alias tossout='_tossout() {
  md ~/.local/share/Trash/files/tossed/ &&
  mv -ivt ~/.local/share/Trash/files/tossed/ "$1" &&
  echo hey, you just tossed that \""$1"\" thing in the trash using the \*mv\* command. so stinky! ;
  }; _tossout'

# gets you to the trash and tossed
alias totrash='_totrash() { cd ~/.local/share/Trash/files/ ; }; _totrash'
alias totossed='_totossed() { cd ~/.local/share/Trash/files/tossed/ ; }; _totossed'

# lists what is in the trash and tossed
alias ltrash='_ltrash() {
  la -got ~/.local/share/Trash/files/ &&
  echo \(listed by last modified\) ;
}; _ltrash'

alias ltossed='_ltossed() {
  la -got ~/.local/share/Trash/files/tossed/ &&
  echo \(listed by last modified\) ;
}; _ltossed'
