# ---

# see the top ten commands you run most
function topten() {
  history | awk '{cmd[$2]++} END {for(elem in cmd) {print cmd[elem] " " elem}}' | sort -n -r | head -10
}

# see the top twenty commands you run most
function toptwenty() {
  history | awk '{cmd[$2]++} END {for(elem in cmd) {print cmd[elem] " " elem}}' | sort -n -r | head -20
}

# see the top fifty commands you run most
function topfifty() {
  history | awk '{cmd[$2]++} END {for(elem in cmd) {print cmd[elem] " " elem}}' | sort -n -r | head -50
}
