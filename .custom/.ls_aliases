# LS_ALIASES

# opens the stuff
alias ls_aliases='${EDITOR} ~/.custom/.ls_aliases'
alias vscls_aliases='code ~/.custom/.ls_aliases'

# ---

alias cl='cdl'
alias cll='cdll'
alias cla='cdla'
alias clsa='cdlsa'
alias clll='cdlll'
alias cllll='cdllll'

# alternate many-l forms for oh-my-zsh ls aliases
alias lll='la'
alias llll='lsa'

# list by size
alias lsize='ls -1ahsS'

# go down directories and list contents
function cdl() {
  cd "$1"
  l
}

function cdll() {
  cd "$1"
  ll
}

function cdla() {
  cd "$1"
  la
}

function cdlsa() {
  cd "$1"
  lsa
}

function cdlll() {
  cd "$1"
  lll
}

function cdllll() {
  cd "$1"
  llll
}

# go up directories and list contents
alias ..l='.. && l'
alias ...l='... && l'
alias ....l='.... && l'
alias .....l='..... && l'
alias ......l='...... && l'
alias ..ll='.. && ll'
alias ...ll='... && ll'
alias ....ll='.... && ll'
alias .....ll='..... && ll'
alias ......ll='...... && ll'
alias ..la='.. && la'
alias ...la='... && la'
alias ....la='.... && la'
alias .....la='..... && la'
alias ......la='...... && la'
alias ..lsa='.. && lsa'
alias ...lsa='... && lsa'
alias ....lsa='.... && lsa'
alias .....lsa='..... && lsa'
alias ......lsa='...... && lsa'
alias ..lll='.. && lll'
alias ...lll='... && lll'
alias ....lll='.... && lll'
alias .....lll='..... && lll'
alias ......lll='...... && lll'
alias ..llll='.. && llll'
alias ...llll='... && llll'
alias ....llll='.... && llll'
alias .....llll='..... && llll'
alias ......llll='...... && llll'
